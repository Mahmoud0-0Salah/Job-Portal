@model IEnumerable<Reports>
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/product_detail.css" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
<body style="background-color: #f0f0f0;">
<div class="container mt-5">
    <div class="row">
            @foreach (var report in Model)
            {
                <div style="background-color: #f0f0f0;">
                      <div class="card" >
                        <p>@report.Description <p/>
                   
                        </div>
                    <br />
                </div>
                
            }

            <hr />
            <div class="row">
                <div class="col-md-4">
                <form asp-controller="Admin" asp-action="Block" asp-route-id="@ViewData["id"]"><button type="submit" class="btn btn-success btn-lg">Confirm</button></form>
                </div>
                <div class="col-md-4">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-warning btn-lg">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
}

</body>
